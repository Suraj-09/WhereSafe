                app:layout_constraintLeft_toRightOf="@id/guidelineV51"
                app:layout_constraintTop_toBottomOf="@id/guideline51"
                app:layout_constraintRight_toLeftOf="@id/guidelineV52"
                app:layout_constraintBottom_toTopOf="@id/guideline52">

                <com.ekndev.gaugelibrary.ArcGauge
                    android:id="@+id/altitudeGauge"
