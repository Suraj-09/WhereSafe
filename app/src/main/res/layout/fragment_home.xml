                android:textColor="@color/info_names"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/guideline51"
                app:layout_constraintLeft_toRightOf="@id/guidelineV50"
                app:layout_constraintRight_toLeftOf="@id/guidelineV51"
                app:layout_constraintBottom_toTopOf="@id/guideline52" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
