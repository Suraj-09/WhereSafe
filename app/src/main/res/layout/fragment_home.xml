<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<!-- <com.ekn.gruzer.gaugelibrary.ArcGauge -->
    <com.ekndev.gaugelibrary.ArcGauge
        android:id="@+id/temperatureGauge"
        android:layout_width="170dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/humidityProgressBar"
        android:layout_width="139dp"
        android:layout_height="129dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="380dp"
        app:cpb_background_progressbar_color="#CCCCCC"
        app:cpb_progress="0"
        app:cpb_progressbar_color="#22B2FF"
        app:cpb_progressbar_width="10dp"
        app:cpb_background_progressbar_width="7dp"
        app:cpb_start_angle="360"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.ekndev.gaugelibrary.ArcGauge
        android:id="@+id/pressureGauge"
        android:layout_width="170dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738" />

    <TextView
        android:id="@+id/humidityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0%"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#770D1515"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/humidityProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/humidityProgressBar"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/humidityProgressBar"
        app:layout_constraintTop_toTopOf="@+id/humidityProgressBar"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/humidityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/humidityProgressBar"
        android:layout_centerHorizontal="true"
        android:text="@string/humidity"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#770D1515"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/humidityProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936" />

    <TextView
        android:id="@+id/pressureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pressureGauge"
        android:layout_centerHorizontal="true"
        android:text="@string/pressure"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#770D1515"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/pressureGauge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967" />

    <TextView
        android:id="@+id/temperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/temperatureGauge"
        android:layout_centerHorizontal="true"
        android:text="@string/temperature"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#770D1515"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/temperatureGauge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967" />



