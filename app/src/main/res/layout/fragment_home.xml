                android:textColor="@color/info_names"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/guideline31"
                app:layout_constraintLeft_toRightOf="@id/guidelineV30"
                app:layout_constraintRight_toLeftOf="@id/guidelineV31"
                app:layout_constraintBottom_toTopOf="@id/guideline32" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintLeft_toRightOf="@id/guidelineV31"
                app:layout_constraintTop_toBottomOf="@id/guideline31"
